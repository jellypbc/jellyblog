<div class="container">
  <div class="row">
    <div class="home">

      <div class="header">
        <canvas id='canvas' class='animated fadeIn' resize hidpi="off" background="#29D04E">
        </canvas>
        <h1 class="">
          Jelly Labs
        </h1>
        <p>
          We're Denny and Cindy, working on building equitable platforms for scientists.
        </p>

        <div class="block">
          <a href="https://mailchi.mp/942ff16d32c6/jelly" target="_blank">
            Sign up for our newsletter
          </a>

          <div class="social-icons">
            <span>Join us!</span>
            <span>
              <a href="http://jellypbc.slack.com"><i class="fa fa-slack mlm"></i></a>
            </span>
            <span>
              <a href="http://twitter.com/jellypbc"><i class="fa fa-twitter mlm"></i></a>
            </span>
            <span>
              <a href="https://gitlab.com/jellylabs/jelly"><i class="fa fa-github mlm"></i></a>
            </span>
          </div>
        </div>
      </div>

      <div class="posts">

        <% @posts.each do |post| %>

          <div class="home-post">
            <h1><%= link_to post.title, post_path(post) %></h1>
            <p class="date"><%= "#{post.created_at.strftime("%b %d, %Y")}" %></p>
            <p><%= post.body.truncate(600, separator: "...").html_safe %></p>
            <%= link_to "Read more", post_path(post) %>
          </div>

        <% end %>

      </div>


    </div>

  </div>
</div>


